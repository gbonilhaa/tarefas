<h3>
  Seja bem vindo, efetue seu cadastro!
</h3>
<div class="row">
  <div class="col-xs-1 col-sm-2 col-md-4">
  </div>
  <div class="col-xs-10">
    <%= form_for @usuario, class: 'form-horizontal' do %>
    <!--<form class="form-horizontal" role="form" method="post">-->
      <div class="form-group">
        <label for="nome" class="col-sm-2 control-label">Nome</label>
        <div class="col-sm-10">
          <input type="text" name="nome" class="form-control" id="nome" value="<%= @usuario.nome %>" required="required" placeholder="Nome">
        </div>
      </div>
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <input type="email" name="email" class="form-control" required="required" value="<%= @usuario.email %>" id="email" placeholder="Email">
        </div>
      </div>
      <div class="form-group">
        <label for="password_digest" class="col-sm-2 control-label">Senha</label>
        <div class="col-sm-10">
          <input type="password" name="password_digest" class="form-control" required="password_digest" id="senha" placeholder="Senha">
        </div>
      </div>
      <div class="form-group">
        <label for="password_confirm" class="col-sm-2 control-label">Confirma senha</label>
        <div class="col-sm-10">
          <input type="password" name="password_confirm" class="form-control" required="required" id="password_confirm" placeholder="Confirme sua senha">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10" align="right">
          <button type="submit" class="btn btn-default">Cadastrar</button>
        </div>
      </div>
    <!-- </form> -->
    <% end %>
  </div>
  <div class="col-xs-1 col-sm-2 col-md-4">
  </div>
</div>